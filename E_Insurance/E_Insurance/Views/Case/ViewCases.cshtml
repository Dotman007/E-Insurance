@model IEnumerable<E_Insurance.Models.Case>

@{
    ViewBag.Title = "ViewCases";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h2 style="text-align:center">List Of Cases</h2>


<table class="table table-striped table-bordered" >
    <tr>
        <th>
            Employer Name
        </th>
        <th>
            Case No.
        </th>
        <th>
            Surname
        </th>
        <th>
            First Name
        </th>
        <th>
           Middle Name
        </th>
        <th>
            Salary
        </th>
        <th>
            Incident Date
        </th>
        <th>
            Incident Time
        </th>
        <th>
            Incident Town
        </th>
        <th>
            LGA
        </th>
        <th>
            State
        </th>
        <th>
            Report Date
        </th>
        <th>
           Incident Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employer.Employer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Case_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Incident_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time_of_Incident)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LGA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Incident_Report_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfIncident)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
}

</table>
