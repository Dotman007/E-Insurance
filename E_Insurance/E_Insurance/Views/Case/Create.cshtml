@model E_Insurance.Models.Case

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}



@using (Html.BeginForm("Create","Case",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Report Employee Case</h4>
        <hr />
        @Html.ValidationSummary(true)

        
        <div class="form-group">
            @Html.LabelFor(model => model.Employee_Surname,"Surname", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Employee_Surname , new{@class="form-control", @placeholder="Enter Employee's Surname"})
                @Html.ValidationMessageFor(model => model.Employee_Surname)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Employee_FirstName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Employee_FirstName, new { @class = "form-control", @placeholder = "Enter Employee's First Name" })
                @Html.ValidationMessageFor(model => model.Employee_FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Employee_MiddleName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Employee_MiddleName, new { @class = "form-control", @placeholder = "Enter Employee's Middle Name" })
                @Html.ValidationMessageFor(model => model.Employee_MiddleName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Salary, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", @placeholder = "Enter Employee's Salary" })
                @Html.ValidationMessageFor(model => model.Salary)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Incident_Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Incident_Date, new { @class = "form-control", @placeholder = "Enter Incident Date" })
                @Html.ValidationMessageFor(model => model.Incident_Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Time_of_Incident, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Time_of_Incident, new { @class = "form-control", @placeholder = "Enter Time of Incident" })
                @Html.ValidationMessageFor(model => model.Time_of_Incident)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Town, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Town, new { @class = "form-control", @placeholder = "Enter Town of Incident" })
                @Html.ValidationMessageFor(model => model.Town)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LGA, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LGA, new { @class = "form-control", @placeholder = "Enter Local Government of Incident" })
                @Html.ValidationMessageFor(model => model.LGA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.State, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.State, new { @class = "form-control", @placeholder = "Enter State of Incident" })
                @Html.ValidationMessageFor(model => model.State)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Incident_Report_Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Incident_Report_Date, new { @class = "form-control", @placeholder = "Enter Date Reported" })
                @Html.ValidationMessageFor(model => model.Incident_Report_Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypeOfIncident, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TypeOfIncident, new List<SelectListItem>
                {
                    new SelectListItem{ Text="Accident", Value="Accident"},
                    new SelectListItem{ Text="Death", Value="Death"},
                    new SelectListItem{Text="Occupational Disease", Value="Occupational Disease"}

                }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeOfIncident)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Notification" class="btn btn-default" />
            </div>
        </div>
    </div>
}
