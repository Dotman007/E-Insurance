@model IEnumerable<E_Insurance.Models.Claim>

@{
    ViewBag.Title = "ViewClaims";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h2 style=" text-align:center">View Claims</h2>


<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employer.Employer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marital_Status)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Employer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employer_Address)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Name_Of_Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sort_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank_Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Compensation)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employer.Employer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marital_Status)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Employer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employer_Address)
        </td>
       
        
        <td>
            @Html.DisplayFor(modelItem => item.Name_Of_Account)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sort_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank_Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Compensation)
        </td>
      
        
        <td>
            @Html.ActionLink("View Approval", "ViewApproval", new { id = item.Claim_Id })
            @*@Html.ActionLink("Approve", "Approval", new { id = Model.Claim_Id })*@
        </td>
    </tr>
}

</table>
