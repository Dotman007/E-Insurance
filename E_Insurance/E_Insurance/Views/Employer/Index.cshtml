            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tel_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mode_Of_Identification)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Incorporation_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Registration_No)
        </td>
        <td>
            <img src="@string.Format("/Uploads/{0}",@item.CAC)" alt="item.CAC" class="span12" style="height:500px;" />
        </td>
        <td>
            <img src="@string.Format("/Uploads/{0}",@item.Company_Logo)" alt="@item.Company_Logo" class="span12" style="height:500px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street_No)
        </td>
