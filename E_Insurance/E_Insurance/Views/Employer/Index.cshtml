            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mode_Of_Identification)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Employer_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Employer_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Employer_Id })
        </td>
    </tr>
}

</table>
