@model E_Insurance.Models.Compliance

@{
    ViewBag.Title = "PrintReceipt";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}
@{

    var emp_Name = Model.Employer.Employer_Name;
    var regNo = Model.Employer.Registration_No;
    var word = "We Dearly Approve Your Compliance by presenting You with this Cerificate";
    var myTitle = "Compliance Certificate";
}
<input type="hidden" id="txtTitle" name="txtTitle" value="@myTitle" />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@myTitle</h3>
    </div>


    <div class="panel-body" id="dataexample3">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label" style="font-weight: 300; font-family:'Franklin Gothic'">EMPLOYER NAME.:</label>
                    &nbsp;<label class="control-label">@emp_Name</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label" style="font-weight: 300; font-family: 'Franklin Gothic'">EMPLOYER REG NO.:</label>
                    &nbsp;<label class="control-label">@regNo</label>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group jumbotron">
                    <label class="control-label" style="font-weight: 400; text-align:center; font-family:'Franklin Gothic'">Word of Compliance</label>
                    &nbsp;<label class="control-label">@word</label>
                </div>
            </div>
           </div>
    </div>
</div>
<a id="printResult" class="btn btn-info">
    <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Print
</a>
@section Scripts {

    <script src="~/Scripts/jquery-printme.js"></script>

    <script type="text/javascript">

        $("#printResult").click(function () {
            var title = $("#txtTitle").val();
            $("#dataexample3").printMe({
                "path": ["../../Content/print.css"],
                "title": title
            });
            return (false);
        });

    </script>
}
