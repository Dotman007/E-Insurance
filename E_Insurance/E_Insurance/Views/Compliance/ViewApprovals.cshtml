@model IEnumerable<E_Insurance.Models.Compliance>

@{
    ViewBag.Title = "ViewApprovals";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h2>View Approvals</h2>


<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employer.Employer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNo)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employer.Employer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNo)
        </td>
        
        <td>
            
            @Html.ActionLink("View Approval", "ViewApproval", new { id=item.Compliance_Id })
        </td>
    </tr>
}

</table>
