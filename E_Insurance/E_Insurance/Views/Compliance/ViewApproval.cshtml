@model E_Insurance.Models.Compliance

@{
    ViewBag.Title = "ViewApproval";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}
@if(!Model.Approve == true)
{
    <h2>
        Not Yet Approved Check Back Later
</h2>        
}
else
{ 
<h2>View Approval</h2>

<div>
    <h4>Compliance</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Employer.Employer_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employer.Employer_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RegistrationNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegistrationNo)
        </dd>

       
    </dl>

    <p>
        <a href="/Compliance/PrintReceipt/@Model.Compliance_Id" class="btn btn-info">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View Certificate
        </a>
    </p>
</div>
}
